    "d3-scale": "^2.1.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "immutable": "^3.8.2",
    "lodash.range": "^3.2.0",
    "massive": "^5.2.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "radium": "^0.24.1",
    "react": "^16.4.2",
    "react-animations": "^1.0.0",
    "react-dom": "^16.4.2",
    "react-move": "^2.8.0",
